<header class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-3">
            <img src="/images/logo.png" alt="Logo" class="img-fluid">
        </div>
        <div class="col-md-9">
            <h1 class="mb-0">StellarWatch</h1>
        </div>
    </div>
</header>
<main class="container">
    <!-- fetch the NASA image from the API -->
    <script src="/js/nasa.js"></script>

    <div class="row justify-content-center align-items-center mb-5">
        <div class="col-md-8 text-center">
            <div class="nasa-image mb-3"></div>
            <h2 class="nasa-title"></h2>
        </div>
        <div class="col-md-4">
            <!-- login form -->
            <form method="POST" action="/login">
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/create-account" class="btn btn-secondary ml-3">Create Account</a>
                </div>
            </form>
        </div>
    </div>
</main>
